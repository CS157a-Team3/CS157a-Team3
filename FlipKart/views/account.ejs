        <main class="mt-5 pt-4">
            <div class="container wow fadeIn">
        
              <!-- Heading -->
              <h2 class="my-5 h2 text-center">Edit Account Information</h2>
        
              <!--Grid row-->
              <div class="row">
        
                <!--Grid column-->
                <div class="col-md-8 mb-4">
        
                  <!--Card-->
                  <div class="card">
        
                    <!--Card content-->
                    <form class="card-body" action = "" method = "POST">
        
                      <!--Grid row-->
                      <div class="row">

                        <!--Grid column-->
                        <div class="col-md-6 mb-2">
                          <!--firstName-->
                          <div class="md-form ">
                            <input type="text" id="fullName" name="fullName" class="form-control" value="<%=user.Name%>">
                          </div>
        
                        </div>
                        <!--Grid column-->
        
                        <!--Grid column-->
                        <div class="col-md-6 mb-2">
        
                          <!--lastName-->
                          <div class="md-form">
                            <input type="text" id="phoneNumber" name="phoneNumber" class="form-control" value="<%=user.PhoneNumber%>">
                          </div>
        
                        </div>
                        <!--Grid column-->
        
                      </div>
                      <!--Grid row-->
    
                      <!--email-->
                      <div class="md-form mb-5">
                        <input type="text" id="email" class="form-control" name="email" value="<%=user.Email%>">
                      </div>
        
                      <!--address-->
                      <div class="md-form mb-5">
                        <input type="password" id="password" class="form-control" name="password" value="<%=user.Password%>">
                      </div>

                      <hr class="mb-4">
                      <button class="btn btn-primary btn-lg btn-block" type="submit">Update</button>
        
                    </form>
        
