<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" type="text/css" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css">
    <link rel="stylesheet" type="text/css" href="libs/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="libs/mdb/mdb.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="css/main.css" rel="stylesheet">
</head>

<body>
  <nav class="navbar fixed-top navbar-expand-lg navbar-light white scrolling-navbar">
    <div class="container">

    <!-- Brand -->
    <a class="navbar-brand waves-effect" href="/storefront">
        <strong class="blue-text">FlipKartt</strong>
    </a>

    <!-- Links -->
    <div class="collapse navbar-collapse" id="navbarSupportedContent">

        <!-- Left -->
        <ul class="navbar-nav mr-auto">
        <li class="nav-item">
            <a class="nav-link waves-effect" href="/storefront">Home</a>
        </li>
        </ul>

        <!-- Right -->
        <ul class="navbar-nav nav-flex-icons">
        <li class="nav-item">
            <a class="nav-link waves-effect" href="/cart">
            <i class="fas fa-shopping-cart"></i>
            <span class="clearfix d-none d-sm-inline-block"> Cart </span>
            </a>
        </li>
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" href="#"><%=user.Name%></a>
            <div class="dropdown-menu">
              <a class="dropdown-item" href="/logOut">Log Out</a>
              <div class="dropdown-divider"></div>
              <a class="dropdown-item" href="/myaccount">Edit My Account</a>
              <a class="dropdown-item" href="/myshipping">Edit Shipping Info</a>
              <a class="dropdown-item" href="/mypayment">Edit Payment Info</a>
            </div>
        </li>
        </ul>

    </div>

    </div>
</nav>

        <main class="mt-5 pt-4">
                <div class="container wow fadeIn">
            
                  <!-- Heading -->
                  <h2 class="my-5 h2 text-center">Edit Payment Information</h2>
            
                  <!--Grid row-->
                  <div class="row">
            
                    <!--Grid column-->
                    <div class="col-md-8 mb-4">
            
                      <!--Card-->
                      <div class="card">
            
                        <!--Card content-->
                        <% cards.forEach((card, index) => { %>
                        <form class="card-body" action = "" method = "POST">
                          <div class="row">
                            <div class="col-md-6 mb-3">
                              <label for="cc-name"></label>
                              <input type="text" class="form-control" id="cc-name" name="cardName" value="<%=card.cardName%>" required>
                              <input type="hidden" name="cardID" class="form-control" value="<%=card.cardID%>">
                              <small class="text-muted">Full name as displayed on card</small>
                              <div class="invalid-feedback">
                                Name on card is required
                              </div>
                            </div>
                            <div class="col-md-6 mb-3">
                              <label for="cc-number"></label>
                              <input type="text" class="form-control" id="cc-number" name="cardNum" value = "<%=card.cardNum%>" required>
                              <small class="text-muted">Card Number</small>
                              <div class="invalid-feedback">
                                Credit card number is required
                              </div>
                            </div>
                          </div>
                          <div class="row">
                            <div class="col-md-3 mb-3">
                              <label for="cc-expiration"></label>
                              <input type="text" class="form-control" id="cc-expiration" name="expDate" value = "<%=card.expDate%>" required>
                              <small class="text-muted">Exp. Date</small>
                              <div class="invalid-feedback">
                                Expiration date required
                              </div>
                            </div>
                            <div class="col-md-3 mb-3">
                              <label for="cc-expiration"></label>
                              <input type="password" class="form-control" id="cc-cvv" name="cvv" value = "<%=card.CVV%>" required>
                              <small class="text-muted">CVV</small>
                              <div class="invalid-feedback">
                                Security code required
                              </div>
                            </div>
                          </div>
                          <hr class="mb-4">
                          <div class="row">
                            <div class="col-lg-6">
                              <button class="btn btn-primary btn-lg btn-block" name="buttonType" type="submit" value="<%=card.CardID%>">Update</button>
                            </div>  
                            <div class="col-lg-6">
                              <button class="btn btn-primary btn-lg btn-block" name="buttonType" type="submit" value="Delete">Delete</button>
                            </div>  
                          </div>    
            
                        </form>
                        <% }) %>
                      </div>
                      <!--/.Card-->



                      <div class="card">
            
                        <!--Card content-->
                        <form class="card-body" action = "" method = "POST">
                          <div class="row">
                            <div class="col-md-6 mb-3">
                              <label for="cc-name">Name on card</label>
                              <input type="text" class="form-control" id="cc-name" name="cardName" placeholder="" required>
                              <small class="text-muted">Full name as displayed on card</small>
                              <div class="invalid-feedback">
                                Name on card is required
                              </div>
                            </div>
                            <div class="col-md-6 mb-3">
                              <label for="cc-number">Credit card number</label>
                              <input type="text" class="form-control" id="cc-number" name="cardNum" placeholder="" required>
                              <div class="invalid-feedback">
                                Credit card number is required
                              </div>
                            </div>
                          </div>
                          <div class="row">
                            <div class="col-md-3 mb-3">
                              <label for="cc-expiration">Expiration</label>
                              <input type="text" class="form-control" id="cc-expiration" name="expDate" placeholder="" required>
                              <div class="invalid-feedback">
                                Expiration date required
                              </div>
                            </div>
                            <div class="col-md-3 mb-3">
                              <label for="cc-expiration">CVV</label>
                              <input type="password" class="form-control" id="cc-cvv" name="cvv" placeholder="" required>
                              <div class="invalid-feedback">
                                Security code required
                              </div>
                            </div>
                          </div>
                          <hr class="mb-4">
                          <button class="btn btn-primary btn-lg btn-block" name="buttonType" value="newCard" type="submit">Add Card</button>  
            
                        </form>
                      </div>
            
                    </div>
            
                  </div>
                  <!--Grid row-->
            
                </div>
              </main>
              <!--Main layout-->
    <script src="libs/jquery/jquery-3.2.1.min.js"></script>
    <script src="libs/bootstrap/js/popper.js"></script>
    <script src="libs/bootstrap/js/bootstrap.min.js"></script>
    <script src="lib/mdb/mdb.min.js"></script>
    
    </body>
</html>
